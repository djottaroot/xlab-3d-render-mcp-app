{
  "buildCommand": "bun run build",
  "outputDirectory": ".",
  "cleanUrls": false,
  "rewrites": [
    {
      "source": "/mcp",
      "destination": "/api/mcp"
    },
    {
      "source": "/mcp/(.*)",
      "destination": "/api/mcp"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Accept, Authorization, Mcp-Session-Id"
        }
      ]
    }
  ],
  "functions": {
    "api/mcp.ts": {
      "includeFiles": "dist/**",
      "maxDuration": 60
    }
  },
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "bunVersion": "1.x"
}